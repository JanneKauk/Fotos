<BorderPane prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="otp1.otpr21fotosdemo.SettingsController">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <ButtonBar style="-fx-background-color: #ebebeb;">
                    <buttons>
                        <Circle fill="DODGERBLUE" radius="17.0" stroke="BLACK" strokeType="INSIDE" ButtonBar.buttonData="LEFT" />
                        <Button mnemonicParsing="false" text="Omat kuvat" ButtonBar.buttonData="LEFT" />
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <TextField alignment="CENTER" promptText="Hae" />
                                <Label text="Tarkennettu haku" GridPane.halignment="CENTER" GridPane.rowIndex="1">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </GridPane>
                        <Button mnemonicParsing="false" text="Julkiset kuvat" ButtonBar.buttonData="LEFT" />
                        <Button mnemonicParsing="false" text="Jaetut kuvat" />
                        <Circle fx:id="profile" fill="DODGERBLUE" radius="17.0" stroke="BLACK" strokeType="INSIDE" />
                    </buttons>
                    <padding>
                        <Insets left="5.0" right="5.0" />
                    </padding>
                </ButtonBar>
            </children>
        </VBox>
    </top>
</BorderPane>